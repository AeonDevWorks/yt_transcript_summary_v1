{
    "manifest_version": 3,
    "name": "YouTube Transcriber",
    "version": "1.0",
    "description": "Transcribe and summarize YouTube videos",
    "permissions": ["activeTab", "storage"],
    "action": {
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ]
  }